@{
	ViewData["Title"] = "Wedding";
}


<section class="wedding-story py-5 p1">
	<div class="container1">
		<div class="row">
			<div class="col-md-6">
				<div class="content">
					<h4 class="text-muted">OUR WEDDING</h4>
					<h1 class="display-4">Our Wedding Story to Date</h1>
					<p>
						Lorem ipsum dolor sit amet consectetur adipiscing elit sociosqu integer, suscipit
						nascetur aliquet posuere aptent vehicula ligula pulvinar praesent.
					</p>
					<a href="#" class="btn btn-primary">Make Reservation</a>
				</div>
			</div>
			<div class="col-md-6">
				<div class="image-grid">
					<div class="image-item">
						<img src="~/Images/Static_Imgs/Services/Wedding/p1.jpg" alt="Wedding Image 1" class="img-fluid">
					</div>
					<div class="image-item">
						<img src="~/Images/Static_Imgs/Services/Wedding/p2.jpg" alt="Wedding Image 2" class="img-fluid" style="min-height: 100%;">
					</div>
					<div class="image-item">
						<img src="~/Images/Static_Imgs/Services/Wedding/p3.jpg" alt="Wedding Image 3" class="img-fluid">
					</div>
					<div class="image-item">
						<img src="~/Images/Static_Imgs/Services/Wedding/blog1.webp" alt="Wedding Image 4" class="img-fluid" style="min-height: 100%;">
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="slideshow-container">
	<div class="slide active">
		<img src="~/Images/Static_Imgs/Services/Wedding/Wedding1.jpg" alt="Image 1" class="slide-image">
		<div class="slide-text">
			<h2>Enchanting Moments</h2>
			<p>Celebrate your love in a setting where every detail is a testament to your unique story.</p>
			<p>Let us craft a magical ceremony that captures the essence of your journey together.</p>
		</div>
	</div>
	<div class="slide">
		<img src="~/Images/Static_Imgs/Services/Wedding/Wedding2.jpg" alt="Image 2" class="slide-image">
		<div class="slide-text">
			<h2>Eternal Vows</h2>
			<p>Exchange vows in an unforgettable ceremony designed to reflect your timeless love.</p>
			<p>From the first look to the final dance, every moment will be filled with elegance and grace.</p>
		</div>
	</div>
	<div class="slide">
		<img src="~/Images/Static_Imgs/Services/Wedding/Wedding3.jpg" alt="Image 3" class="slide-image">
		<div class="slide-text">
			<h2>Dream Wedding</h2>
			<p>Turn your wedding day dreams into a beautiful reality with our bespoke ceremony planning.</p>
			<p>We ensure every detail is perfect, so you can focus on the joy of the moment.</p>
		</div>
	</div>
</div>

<section class="section__container gallery__container">
	<h2 class="section__header1" style="text-align: center;">~ GALLERY ~</h2>
	<div class="gallery__grid">
		<img src="~/assets/image-1.jpg" alt="gallery" />
		<img src="~/assets/image-2.jpg" alt="gallery" />
		<img src="~/assets/image-3.jpg" alt="gallery" />
		<img src="~/assets/image-4.jpg" alt="gallery" />
		<img src="~/assets/image-5.jpg" alt="gallery" />
		<img src="~/assets/image-6.jpg" alt="gallery" />
		<img src="~/assets/image-7.jpg" alt="gallery" />
		<img src="~/assets/image-8.jpg" alt="gallery" />
		<img src="~/assets/image-3.jpg" alt="gallery" />
	</div>
	<div class="gallery__btn">
		<button class="btn">VIEW GALLERY</button>
	</div>
</section>


@section Scripts{
	<script src="~/js/wedding.js" asp-append-version="true"></script>
}

